extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Dat hang thanh cong")
        
        .row 
            .col-12 
                div(class="alert alert-success")
                    | Congratulations! Your order has been accepted 
        
        if(order)
            .row 
                .col-12 
                    h4(class="mb-2") Personal Information 
                    table(class="table table-bordered")
                        tbody 
                            tr 
                                td Ho ten 
                                td
                                    b #{order.userInfo.fullName}
                            tr 
                                td Phone number     
                                td 
                                    b #{order.userInfo.phone}
                            tr 
                                td Address 
                                td 
                                    b #{order.userInfo.address}           
            .row 
                .col-12 
                    h3(class="mb-2") Thong tin don hang 
                    table(class="table table-bordered")  
                        thead
                            tr 
                                th STT 
                                th Anh 
                                th Ten 
                                th Gia 
                                th So luong 
                                th Tong tien 
                        tbody 
                            if(order.products.length > 0)
                                each item, index in order.products 
                                    tr 
                                        td #{index + 1}
                                        td
                                            img(
                                                src=item.productInfo.thumbnail
                                                alt=item.productInfo.title 
                                                width="80px"
                                            )
                                        td #{item.productInfo.title}
                                        td #{item.price}$
                                        td #{item.quantity}
                                        td #{item.totalPrice}$

                    if(order.products.length > 0)
                        h3(class="text-right") Tong don hang: #{order.totalPrice}$


                      
                        