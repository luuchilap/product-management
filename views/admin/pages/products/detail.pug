extends ../../layouts/default.pug

block main 
    if (product.title)
        h1(class="mb-4") #{product.title}
    
    if (product.price)
        div(class="mb-4") Price: #{product.price}
    
    if (product.discountPercentage)
        div(class="mb-4") Discount: #{product.discountPercentage}
    
    if (product.stock)
        div(class="mb-4") Stock: #{product.stock}
    
    if (product.thumbnail)
        div(class="mb-4")
            img(
                src=product.thumbnail
                style="width: 100px"
            )
    
    if (product.status)
        div(class="mb-4")
            span Status:    
            if (product.status == "active")
                span(class="badge badge-success") Active 
            else 
                span(class="badge badge-danger") Inactive 

    if (product.position)
        div(class="mb-4") Position: <b>#{product.position}</b>

    if (product.description)
        div(class="mb-4") Description: <b>!{product.description}</b>

    if (product.product_category_id)
        div(class="mb-4") Category: <b>!{product.product_category_id}</b>
   

    a(
        href=`${prefixAdmin}/products/edit/${product.id}`
        class="btn btn-warning" 
    ) Edit